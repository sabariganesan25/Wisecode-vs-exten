{
  "name": "wisecode-ai",
  "displayName": "Wisecode AI: Compliance & Security",
  "description": "Enterprise-grade AI security agent for automated code compliance, auditing, and self-healing.",
  "version": "1.2.0",
  "icon": "images/icon.png",
  "publisher": "wisecodes-systems",
  "repository": {
    "type": "git",
    "url": "https://github.com/sabariganesan25/Wisecode-vs-exten"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Testing",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:go",
    "onLanguage:c",
    "onLanguage:cpp",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:typescript",
    "onView:wisecode.sidebarView",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wisecode.openDashboard",
        "title": "Wisecode: Open Dashboard"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "wisecode-activitybar",
          "title": "Wisecode AI",
          "icon": "images/icon.png"
        }
      ]
    },
    "views": {
      "wisecode-activitybar": [
        {
          "id": "wisecode.sidebarView",
          "name": "Wisecode AI",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Wisecode AI",
      "properties": {
        "wisecode.ibmApiKey": {
          "type": "string",
          "default": "",
          "description": "IBM Cloud API Key for Watsonx AI"
        },
        "wisecode.projectId": {
          "type": "string",
          "default": "",
          "description": "IBM Watsonx Project ID"
        },
        "wisecode.region": {
          "type": "string",
          "default": "us-south",
          "enum": [
            "us-south",
            "eu-de",
            "eu-gb",
            "jp-tok"
          ],
          "description": "IBM Cloud region"
        }
      }
    }
  },
  "scripts": {
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "dev": "webpack --mode development --watch",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/vscode": "^1.85.0",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@ibm-cloud/watsonx-ai": "^1.7.7",
    "axios": "^1.13.4",
    "dotenv": "^17.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}